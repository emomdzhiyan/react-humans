{
  "extends": "airbnb",
  "env": {
    "jest": true,
    "node": true,
    "es6": true,
    "browser": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, {"extensions": [".js", ".jsx"]}],
    "max-len": ["error", { "code": 120 }]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    },
    "import/extensions": [
      ".js",
      ".jsx",
      ".json"
    ]
  }
}
